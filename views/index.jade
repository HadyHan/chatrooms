extends layout

block content
  .container(role='main')
    .row
      .col-md-12.text-center
        h3 文字聊天示例
        p 复制此页面网址邀请朋友一起文字聊天
      .col-md-6.col-md-offset-3
        .pane
          #messages-container
          p
            input#username.form-control(type='text', placeholder='输入你的用户名')
            input#message-field.form-control(type='text', placeholder='撰写消息')
          input#send.btn.btn-success.btn-default.btn-block(type='button', value='发送消息')

